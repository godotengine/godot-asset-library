# EditorConfig is awesome: http://EditorConfig.org
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# CSS
[*.css]
indent_style = space
indent_size = 4

# PHP
[*.{php,phtml}]
indent_style = space
indent_size = 4
